<header class="my_nav d-flex justify-content-between align-items-center p-2 mb-4">
  <nav>
    <%= link_to 'javascript:history.back()', class: "btn btn-sm" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#fff" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
      </svg>
    <% end %>     
  </nav>

  <span class="fs-5 text-white" >TRANSACTIONS</span>
  <br>    
</header>


<div class="container">
  <% if @expenses.empty? %>
    <p>Expense lists is empty, please create an expense.</p>
  <% else %>
    <div class="d-flex justify-content-between align-items-center" >
      <h1><%= @category.name.capitalize%></h1>
      <span class="fs-3" >Total: <%= number_to_currency(@expenses.sum(&:amount), unit:"₦") %> </span>
    </div>    
    <% @expenses.each do |expense| %>
      <div class="card shadow mb-4 px-3 py-3">
        <div class="d-flex" style="align-items:center;justify-content:space-between"> 
          <h5 class=""> <%= expense.name.capitalize %> </h5>
          <span> <%= number_to_currency(expense.amount, unit:"₦") %> </span>
        </div>
        <p class="card-text"><%= @category.created_at.strftime('%a %d %b %Y')%> </p>
      </div>
    <% end %>
  <% end %>
</div>
  <div class="p-3 new-category-btn">
    <%= link_to "Create Expense", new_user_expense_path, class: "btn new-category-btn" %>
  </div>